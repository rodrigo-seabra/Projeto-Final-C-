@model projeto_final.Models.Cliente

@{
    ViewData["Title"] = "Editar";
}

<h1>Editando o :@Html.DisplayFor(modelItem => modelItem.ClienteNome)</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ClienteNome" class="control-label"></label>
                <input asp-for="ClienteNome" class="form-control" />
                <span asp-validation-for="ClienteNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteDataNascimento" class="control-label"></label>
                <input asp-for="ClienteDataNascimento" class="form-control" />
                <span asp-validation-for="ClienteDataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteCpf" class="control-label"></label>
                <input asp-for="ClienteCpf" class="form-control" />
                <span asp-validation-for="ClienteCpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteEndereco" class="control-label"></label>
                <input asp-for="ClienteEndereco" class="form-control" />
                <span asp-validation-for="ClienteEndereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteNumeroCasa" class="control-label"></label>
                <input asp-for="ClienteNumeroCasa" class="form-control" />
                <span asp-validation-for="ClienteNumeroCasa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteBairro" class="control-label"></label>
                <input asp-for="ClienteBairro" class="form-control" />
                <span asp-validation-for="ClienteBairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteCep" class="control-label"></label>
                <input asp-for="ClienteCep" class="form-control" />
                <span asp-validation-for="ClienteCep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClienteTelefone" class="control-label"></label>
                <input asp-for="ClienteTelefone" class="form-control" />
                <span asp-validation-for="ClienteTelefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CidadeId" class="control-label"></label>
                <select asp-for="CidadeId" class="form-control" asp-items="ViewBag.CidadeId"></select>
                <span asp-validation-for="CidadeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn text-white createbtn" />
                <div>
                    <a asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
