@model IEnumerable<projeto_final.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<div class="title mt-4 mb-4">
    <h1>Clientes</h1>
    <button class="btn btn-success mt-2">
        <a asp-action="Create" class="text-decoration-none text-white">Adicionar nova cliente</a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Data de nascimento
            </th>
            <th>
               CPF
            </th>
            <th>
                Endereço
            </th>
            <th>
                Número da casa
            </th>
            <th>
                Bairro
            </th>
            <th>
                CEP
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                Telefone
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNome)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.ClienteDataNascimento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteCpf)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteEndereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNumeroCasa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteBairro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteCep)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cidade.CidadeNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteTelefone)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detailhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
