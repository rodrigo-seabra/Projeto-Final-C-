@model projeto_final.Models.SaidaProduto

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar saída de produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SaidaProdutoData" class="control-label"></label>
                <input asp-for="SaidaProdutoData" class="form-control" />
                <span asp-validation-for="SaidaProdutoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SaidaProdutoQuantidade" class="control-label"></label>
                <input asp-for="SaidaProdutoQuantidade" class="form-control" />
                <span asp-validation-for="SaidaProdutoQuantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class ="form-control" asp-items="ViewBag.ProdutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="ViewBag.UsuarioId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="TipoSaidaId" class="control-label"></label>
                <select asp-for="TipoSaidaId" class ="form-control" asp-items="ViewBag.TipoSaidaId"></select>
            </div>
            <div class="form-group creatediv ">
                <input type="submit" value="Cadastrar" class="btn text-white createbtn" />
                <div>
                    <a asp-action="Index">Voltar</a>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
