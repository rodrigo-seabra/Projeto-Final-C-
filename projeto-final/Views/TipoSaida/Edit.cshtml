@model projeto_final.Models.TipoSaida

@{
    ViewData["Title"] = "Editar";
}
<link href="~/css/BackList.css" rel="stylesheet" />


<h1>Editar tipo de saída</h1>
<hr />
<div class="ContainerMain">
    <div class="Form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TipoSaidaDescricao" class="control-label"></label>
                <input asp-for="TipoSaidaDescricao" class="form-control" />
                <span asp-validation-for="TipoSaidaDescricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn-success mt-4" />
            </div>
        </form>
    </div>
    <div class="VerTudo">
        <p>Ver lista de todos tipos de saidas cadastrados</p>
        <a asp-action="Index" class="button">Ver</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
