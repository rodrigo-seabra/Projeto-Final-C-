@model projeto_final.Models.Pais

@{
    ViewData["Title"] = "Editar";
}

<link href="~/css/BackList.css" rel="stylesheet" />


<h1>Editar País</h1>


<hr />
<div class="ContainerMain">
    <div class="form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PaisNome" class="control-label"></label>
                <input asp-for="PaisNome" class="form-control" />
                <span asp-validation-for="PaisNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success mt-4" />
            </div>
        </form>
    </div>
    <div class="VerTudo">
        <p>Ver lista de todos os países cadastrados</p>
        <a asp-action="Index" class="button">Ver</a>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
