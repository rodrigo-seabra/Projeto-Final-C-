@model projeto_final.Models.Fornecedor

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Fornecedor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FornecedorNome" class="control-label"></label>
                <input asp-for="FornecedorNome" class="form-control" />
                <span asp-validation-for="FornecedorNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorEmail" class="control-label"></label>
                <input asp-for="FornecedorEmail" class="form-control" />
                <span asp-validation-for="FornecedorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorCnpj" class="control-label"></label>
                <input asp-for="FornecedorCnpj" class="form-control" />
                <span asp-validation-for="FornecedorCnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
