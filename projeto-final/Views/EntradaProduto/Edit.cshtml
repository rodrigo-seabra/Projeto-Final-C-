@model projeto_final.Models.EntradaProduto

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar entrada de produto</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EntradaProdutoQuantidade" class="control-label"></label>
                <input asp-for="EntradaProdutoQuantidade" class="form-control" />
                <span asp-validation-for="EntradaProdutoQuantidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EntradaProdutoData" class="control-label"></label>
                <input asp-for="EntradaProdutoData" class="form-control" />
                <span asp-validation-for="EntradaProdutoData" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdutoId" class="control-label"></label>
                <select asp-for="ProdutoId" class="form-control" asp-items="ViewBag.ProdutoId"></select>
                <span asp-validation-for="ProdutoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn text-white createbtn mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
