@model projeto_final.Models.Produto

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Você tem certeza que deseja excluir isso?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <section class="row">
        <div class="tipoprodutocss">
            <h4>
                @Html.DisplayNameFor(model => model.ProdutoNome)
                :
            </h4>
            <h5>
                @Html.DisplayFor(model => model.ProdutoNome)
            </h5>
        </div>
        <div class="tipoprodutocss">
            <h4>
                @Html.DisplayNameFor(model => model.ProdutoEstoque)
                :
            </h4>
            <h5>
                @Html.DisplayFor(model => model.ProdutoEstoque)
            </h5>
        </div>
        <div class="tipoprodutocss">
            <h4>
                @Html.DisplayNameFor(model => model.TipoProduto)
                :
            </h4>
            <h5>
                @Html.DisplayFor(model => model.TipoProduto.TipoProdutoDescricao)
            </h5>
        </div>
        <div class="tipoprodutocss">
            <h4>
                @Html.DisplayNameFor(model => model.Fornecedor)
                :
            </h4>
            <h5>
                @Html.DisplayFor(model => model.Fornecedor.FornecedorNome)
            </h5>
        </div>
    </section>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
