@model IEnumerable<projeto_final.Models.Estado>

@{
    ViewData["Title"] = "Fornecedor";
}


<div class="title mt-4 mb-4">
    <h1>Estado</h1>
    <button class="btn btn-success mt-2">
        <a asp-action="Create" class="text-decoration-none text-white">Adicionar estado</a>
    </button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EstadoNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pais)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pais.PaisNome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">DEtalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
