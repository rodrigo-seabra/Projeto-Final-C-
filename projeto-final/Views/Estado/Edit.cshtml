@model projeto_final.Models.Estado

@{
    ViewData["Title"] = "Editar";
}

<link href="~/css/BackList.css" rel="stylesheet" />


<h1>Editar Estado</h1>

<hr />
<div class="ContainerMain">
    <div class="Form">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="EstadoNome" class="control-label"></label>
                <input asp-for="EstadoNome" class="form-control" />
                <span asp-validation-for="EstadoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaisId" class="control-label"></label>
                <select asp-for="PaisId" class="form-control" asp-items="ViewBag.PaisId"></select>
                <span asp-validation-for="PaisId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success mt-4" />
            </div>
        </form>
    </div>
    <div class="VerTudo">
        <p>Ver lista de todos tipos de saidas cadastrados</p>
        <a asp-action="Index" class="button">Ver</a>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
